{
  "name": "warehouse-manage-system",
  "version": "1.0.0",
  "description": "校服工厂仓库管理系统",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build && node -e \"const fs=require('fs');const p='dist/web/templates/shipment-template.xlsx';if(!fs.existsSync(p)){console.error('[ERROR] 模板未打包: '+p);process.exit(1)}else{console.log('[OK] 模板已打包: '+p)}\"",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently -n dev,electron -c \"blue,magenta\" \"npm run dev\" \"wait-on tcp:5174 && set NODE_ENV=development&& electron .\"",
    "electron:dir": "npm run build && electron-builder --dir",
    "electron:nsis": "node scripts/killWinUnpacked.js && npm run build && electron-builder --win nsis",
    "electron:build": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "test": "node tests/run-tests.js"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.1.0",
    "bcrypt": "^5.1.0",
    "better-sqlite3": "^8.7.0",
    "dayjs": "^1.11.9",
    "echarts": "^5.4.3",
    "element-plus": "^2.3.8",
    "exceljs": "^4.4.0",
    "pinia": "^2.1.6",
    "vue": "^3.3.4",
    "vue-echarts": "^6.6.1",
    "vue-router": "^4.2.4",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/better-sqlite3": "^7.6.4",
    "@vitejs/plugin-vue": "^4.2.3",
    "unplugin-auto-import": "^0.17.7",
    "unplugin-vue-components": "^0.26.0",
    "concurrently": "^8.2.0",
    "electron": "^25.3.1",
    "electron-builder": "^24.6.3",
    "image-size": "^2.0.2",
    "to-ico": "^1.1.5",
    "typescript": "^5.1.6",
    "vite": "^4.4.5",
    "vue-tsc": "^1.8.5",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.uniform.warehouse",
    "productName": "校服仓库管理系统",
    "npmRebuild": false,
    "directories": {
      "output": "release-output-3"
    },
    "files": [
      "dist/web/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "node_modules/app-builder-lib/templates/icons/proton-native/proton-native.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
